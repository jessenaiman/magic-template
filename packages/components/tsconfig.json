{
  "extends": "@repo/typescript-config/react-library.json",
  "ignoreDeprecations": "6.0",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["../../lib/src/*"],
      "@/hooks/*": ["../../hooks/src/*"],
      "@repo/components/*": ["./src/*"],
      "@repo/lib/*": ["../../lib/src/*"],
      "@repo/hooks/*": ["../../hooks/src/*"],
      "@workspace/ui/*": ["./ui/*"],
      "@workspace/magicui/*": ["./magicui/*"],
      "@workspace/animate-ui/*": ["./animate-ui/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}