{
  "extends": "@repo/typescript-config/react-library.json",
  "ignoreDeprecations": "6.0",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../../lib/src/*"],
      "@/src/lib/*": ["../../lib/src/*"],
      "@/packages/ui/src/ui/*": ["./src/ui/*"],
      "@/packages/ui/src/animate-ui/*": ["./src/animate-ui/*"],
      "@/packages/ui/src/magicui/*": ["./src/magicui/*"],
      "@/packages/ui/src/reactbits/*": ["./src/reactbits/*"],
      "@/src/hooks/*": ["../../hooks/src/*"],
      "@/hooks/*": ["../../hooks/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}